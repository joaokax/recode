

@model IEnumerable<AgenciaViagens.Models.Usuario> 
    @{
        ViewData["Title"] = "Lista de Usuários";
}
<br />
<br />
                      <div class="container">
                          <div class="row">
                              <div class="col-sm-6">
                                  <h3>Lista de Usuarios</h3>
                              </div>
                              <div class="col-sm-6">
                                  <a class="btn btn-warning d-block" asp-action="Create" asp-controller="Conta">Cadastro de Titular e Acompanhantes</a>
                              </div>
                          </div>
                          <br />
                          <br />
                          <div class="row">
                              @if (Model.Count() > 0)
                              {
                              <table class="table table-bordered table-striped">
                                  <thead>
                                      <tr>
                                          <td>@Html.DisplayNameFor(m => m.Id)</td>
                                          <td>@Html.DisplayNameFor(m => m.Nome)</td>
                                          <td>@Html.DisplayNameFor(m => m.Idade)</td>
                                          <td>@Html.DisplayNameFor(m => m.Email)</td>
                                          <td>@Html.DisplayNameFor(m => m.Telefone)</td>
                                          <td>Ações</td>
                                      </tr>
                                  </thead>
                                  <tbody>
                                      @foreach (var item in Model)
                                      {
                                      <tr>
                                          <td>@item.Id</td>
                                          <td>@item.Nome</td>
                                          <td>@item.Idade</td>
                                          <td>@item.Email</td>
                                          <td>@item.Telefone</td>
                                          <td>
                                              <a asp-action="EditarUsuario" asp-route-id="@item.Id" class="btn text-danger">Editar</a>
                                              <a asp-action="DeletarUsuario" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
                                          </td>
                                      </tr>

                                      }
                                  </tbody>
                              </table>
                              }
                              else
                              {
                              <p>Sem registros.</p>
                              }
                          </div>
                      </div>